kind: pipeline
type: docker
name: default

steps:
  - name: build-and-test
    image: ubuntu:latest
    commands:
      - apt update
      - apt install -y openjdk-24-jdk maven
      - java -version
      - mvn clean install

  - name: package
    image: ubuntu:latest
    commands:
      - apt update
      - apt install -y openjdk-24-jdk maven
      - mvn package

trigger:
  event:
    - push
    - pull_request